<?xml version="1.0" encoding="utf-8"?>
<com.example.android.architecture.blueprints.beetv.widgets.ZoomSelectionRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_mineshaft_radius_30"
    android:layout_marginHorizontal="@dimen/size_4"
    android:clipChildren="false"
    android:focusable="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingHorizontal="@dimen/size_24"
        android:paddingVertical="@dimen/size_8"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:focusable="false" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginLeft="@dimen/size_8"
            android:focusable="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/alto" />
    </LinearLayout>
</com.example.android.architecture.blueprints.beetv.widgets.ZoomSelectionRelativeLayout>