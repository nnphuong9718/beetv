        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:clipChildren="false"
        android:focusable="false"
        android:padding="@dimen/size_40">

        <LinearLayout
            android:id="@+id/layoutEditText"
            android:layout_width="266dp"
            android:layout_height="@dimen/size_40"
            android:layout_marginHorizontal="@dimen/size_5"
            android:layout_marginTop="@dimen/size_40"
            android:layout_marginBottom="@dimen/size_5"
            android:background="@drawable/bg_black_radius_20"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_marginHorizontal="@dimen/size_10"
                android:focusable="false"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="@dimen/size_10"
                android:layout_marginRight="@dimen/size_10"
                android:backgroundTint="@color/chapter_bkg_color"
                android:focusable="false"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />
        </LinearLayout>

        <com.example.android.architecture.blueprints.beetv.widgets.metro.MetroItemFrameLayout
            android:id="@+id/bt_empty"
            android:layout_width="128dp"
            android:layout_height="34dp"
            android:layout_below="@+id/layoutEditText"
            android:layout_marginHorizontal="@dimen/size_5"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_5"
            android:background="@drawable/bg_search_focus"
            android:focusable="true"
            android:nextFocusRight="@id/bt_delete"
            android:nextFocusDown="@id/bt_a"
            android:onClick="@{()->click.emptySearch()}">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="false"
                android:text="@string/empty"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white" />
        </com.example.android.architecture.blueprints.beetv.widgets.metro.MetroItemFrameLayout>

        <com.example.android.architecture.blueprints.beetv.widgets.metro.MetroItemFrameLayout
            android:id="@+id/bt_delete"
            android:layout_width="128dp"
            android:layout_height="34dp"
            android:layout_below="@+id/layoutEditText"
            android:layout_marginHorizontal="@dimen/size_5"
            android:layout_marginTop="@dimen/size_12"
            android:layout_marginBottom="@dimen/size_5"
            android:layout_toEndOf="@+id/bt_empty"
            android:layout_toRightOf="@+id/bt_empty"
            android:background="@drawable/bg_search_focus"
            android:focusable="true"
            android:nextFocusRight="@id/rv_result"
            android:nextFocusDown="@id/bt_d"
            android:onClick="@{()->click.deleteSearch()}">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:focusable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:focusable="false"
                    android:src="@drawable/ic_delete" />

