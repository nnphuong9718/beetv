<?xml version="1.0" encoding="utf-8"?>
<com.example.android.architecture.blueprints.beetv.widgets.metro.MetroItemFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="194dp"
    android:layout_height="64dp"
    android:paddingHorizontal="16dp"
    android:background="@color/chapter_bkg_color"
    android:focusable="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:id="@+id/iv_icon"
            android:focusable="false"
            android:src="@drawable/ic_screen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:focusable="false"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화면비율"
                android:textAllCaps="true"
                android:focusable="false"
                android:textSize="15sp"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/size_4"
                android:focusable="false"
                android:text="시스템 플레이어"
                android:singleLine="true"
                android:textSize="13sp"
                android:textColor="@color/boulder" />
        </LinearLayout>

    </LinearLayout>

</com.example.android.architecture.blueprints.beetv.widgets.metro.MetroItemFrameLayout>
