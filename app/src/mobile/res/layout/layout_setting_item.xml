<?xml version="1.0" encoding="utf-8"?>
<com.example.android.architecture.blueprints.beetv.widgets.metro.MetroItemFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="180dp"
    android:layout_height="64dp"
    android:paddingHorizontal="@dimen/size_20"
    android:background="@color/chapter_bkg_color"
    android:focusable="true">


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/size_40"
            android:layout_height="@dimen/size_40"
            android:id="@+id/iv_icon"
            android:src="@drawable/ic_screen"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/size_8"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화면비율"
                android:textAllCaps="true"
                android:focusable="false"
                android:textSize="14sp"
                android:singleLine="true"
                android:textColor="@color/white" />
            <TextView
                android:id="@+id/tv_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:focusable="false"
                android:text="시스템 플레이어"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/boulder" />
        </LinearLayout>

    </LinearLayout>

</com.example.android.architecture.blueprints.beetv.widgets.metro.MetroItemFrameLayout>
